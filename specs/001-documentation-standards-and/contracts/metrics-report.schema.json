{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://equipqr.app/schemas/doc-validation-metrics.json",
  "title": "Documentation Validation Metrics Report",
  "description": "Metrics report schema for documentation quality assurance CI artifacts",
  "type": "object",
  "properties": {
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp when report was generated",
      "format": "date-time"
    },
    "overallScore": {
      "type": "number",
      "description": "Overall quality score (0-100)",
      "minimum": 0,
      "maximum": 100
    },
    "categoryScores": {
      "type": "object",
      "description": "Quality scores by validation category",
      "properties": {
        "quality": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "sync": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "structure": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "accessibility": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "deprecation": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        }
      },
      "required": ["quality", "sync", "structure", "accessibility", "deprecation"],
      "additionalProperties": false
    },
    "totalFilesChecked": {
      "type": "integer",
      "description": "Total number of documentation files validated",
      "minimum": 0
    },
    "totalRulesExecuted": {
      "type": "integer",
      "description": "Total number of validation rules executed",
      "minimum": 0
    },
    "issuesBySeverity": {
      "type": "object",
      "description": "Total issues found grouped by severity",
      "properties": {
        "error": {
          "type": "integer",
          "minimum": 0
        },
        "warning": {
          "type": "integer",
          "minimum": 0
        },
        "info": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["error", "warning", "info"],
      "additionalProperties": false
    },
    "topViolations": {
      "type": "array",
      "description": "Top 10 most violated rules",
      "items": {
        "type": "object",
        "properties": {
          "ruleId": {
            "type": "string",
            "pattern": "^FR-\\d{3}$"
          },
          "ruleName": {
            "type": "string"
          },
          "fileCount": {
            "type": "integer",
            "minimum": 0
          },
          "violationCount": {
            "type": "integer",
            "minimum": 0
          },
          "violationRate": {
            "type": "number",
            "description": "Percentage of checked files with violations",
            "minimum": 0,
            "maximum": 100
          }
        },
        "required": ["ruleId", "ruleName", "fileCount", "violationCount", "violationRate"]
      },
      "maxItems": 10
    },
    "fileScores": {
      "type": "array",
      "description": "Quality scores per file",
      "items": {
        "type": "object",
        "properties": {
          "filePath": {
            "type": "string"
          },
          "score": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          },
          "issueCount": {
            "type": "integer",
            "minimum": 0
          },
          "worstSeverity": {
            "type": "string",
            "enum": ["error", "warning", "info", "none"]
          }
        },
        "required": ["filePath", "score", "issueCount", "worstSeverity"]
      }
    },
    "trend": {
      "type": "object",
      "description": "Trend comparison with baseline",
      "properties": {
        "baselineTimestamp": {
          "type": "string",
          "format": "date-time"
        },
        "scoreDelta": {
          "type": "number",
          "description": "Change in overall score (positive = improvement)"
        },
        "issuesDelta": {
          "type": "object",
          "description": "Change in issue counts by severity",
          "properties": {
            "error": {
              "type": "integer"
            },
            "warning": {
              "type": "integer"
            },
            "info": {
              "type": "integer"
            }
          },
          "required": ["error", "warning", "info"]
        },
        "newViolations": {
          "type": "integer",
          "description": "Number of new violations introduced since baseline",
          "minimum": 0
        },
        "resolvedViolations": {
          "type": "integer",
          "description": "Number of violations resolved since baseline",
          "minimum": 0
        }
      },
      "required": ["baselineTimestamp", "scoreDelta", "issuesDelta", "newViolations", "resolvedViolations"]
    },
    "mode": {
      "type": "string",
      "description": "Validation mode used",
      "enum": ["incremental", "full"]
    },
    "executionTimeMs": {
      "type": "integer",
      "description": "Total execution time in milliseconds",
      "minimum": 0
    },
    "validationResults": {
      "type": "array",
      "description": "Detailed validation results for each file",
      "items": {
        "type": "object",
        "properties": {
          "ruleId": {
            "type": "string",
            "pattern": "^FR-\\d{3}$"
          },
          "severity": {
            "type": "string",
            "enum": ["error", "warning", "info"]
          },
          "filePath": {
            "type": "string"
          },
          "location": {
            "type": "object",
            "properties": {
              "line": {
                "type": "integer",
                "minimum": 1
              },
              "column": {
                "type": "integer",
                "minimum": 1
              },
              "endLine": {
                "type": "integer",
                "minimum": 1
              },
              "endColumn": {
                "type": "integer",
                "minimum": 1
              }
            }
          },
          "status": {
            "type": "string",
            "enum": ["pass", "fail", "skip", "error"]
          },
          "message": {
            "type": "string"
          },
          "suggestedFix": {
            "type": "string"
          },
          "context": {
            "type": "object",
            "additionalProperties": true
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["ruleId", "severity", "filePath", "status", "message", "timestamp"]
      }
    }
  },
  "required": [
    "timestamp",
    "overallScore",
    "categoryScores",
    "totalFilesChecked",
    "totalRulesExecuted",
    "issuesBySeverity",
    "mode",
    "executionTimeMs"
  ],
  "additionalProperties": false
}

