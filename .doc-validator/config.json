{
  "rules": {
    "quality-001-internal-links": {
      "enabled": true,
      "severity": "critical"
    },
    "quality-002-required-sections": {
      "enabled": true,
      "severity": "critical"
    },
    "quality-003-code-examples": {
      "enabled": true,
      "severity": "high"
    },
    "quality-004-external-links": {
      "enabled": true,
      "severity": "medium"
    },
    "quality-005-terminology": {
      "enabled": true,
      "severity": "medium"
    },
    "quality-006-vague-language": {
      "enabled": true,
      "severity": "low"
    },
    "sync-001-schema": {
      "enabled": true,
      "severity": "high"
    },
    "sync-002-env": {
      "enabled": true,
      "severity": "high"
    },
    "sync-003-api": {
      "enabled": true,
      "severity": "high"
    },
    "sync-004-files": {
      "enabled": true,
      "severity": "high"
    },
    "sync-005-feature-flags": {
      "enabled": true,
      "severity": "high"
    },
    "structure-001-naming": {
      "enabled": true,
      "severity": "medium"
    },
    "structure-002-duplicate": {
      "enabled": false
    },
    "structure-003-directory": {
      "enabled": true,
      "severity": "medium"
    },
    "structure-004-media": {
      "enabled": true,
      "severity": "medium"
    },
    "structure-005-readme": {
      "enabled": true,
      "severity": "medium"
    },
    "accessibility-001-headings": {
      "enabled": true,
      "severity": "medium"
    },
    "accessibility-002-alt-text": {
      "enabled": true,
      "severity": "medium"
    },
    "accessibility-003-syntax": {
      "enabled": true,
      "severity": "low"
    },
    "accessibility-004-formatting": {
      "enabled": true,
      "severity": "low"
    },
    "accessibility-005-tables": {
      "enabled": true,
      "severity": "medium"
    }
  },
  "incremental": false,
  "externalLinkCacheDuration": 24,
  "rateLimits": {
    "defaultDelayMs": 1000,
    "perDomain": {
      "github.com": 2000,
      "supabase.com": 1500
    }
  },
  "excludePaths": [
    "node_modules/**",
    "dist/**",
    "coverage/**",
    ".git/**",
    "specs/**"
  ],
  "docsRoot": "docs"
}

